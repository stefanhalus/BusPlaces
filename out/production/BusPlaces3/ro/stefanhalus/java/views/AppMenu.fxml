<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>

<MenuBar fx:id="menuBar" accessibleHelp="Se deschide bara de meniuri" accessibleText="Bară de meniuri" xmlns="http://javafx.com/javafx/9.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ro.stefanhalus.java.views.AppMenuController">
    <menus>
        <Menu mnemonicParsing="false" text="Fișier">
            <items>
                <MenuItem fx:id="menuFileWelcome" mnemonicParsing="false" onAction="#goToWelcome" text="Prima pagină" />
                <MenuItem mnemonicParsing="false" onAction="#goToCompany" text="Opțiuni" />
                <!--<MenuItem mnemonicParsing="false" onAction="#goToAuthentificationData" text="Date autentificare" />-->
                <MenuItem fx:id="menuFileExit" mnemonicParsing="false" onAction="#ExitApplication" text="Ieșire" />
            </items>
        </Menu>
        <Menu mnemonicParsing="false" text="Companie">
            <items>

                <MenuItem mnemonicParsing="false" onAction="#goToRoutes" text="Rute" />
                <MenuItem fx:id="menuCompanyEmployee" mnemonicParsing="false" onAction="#goToEmployeeList" text="Angajați" />
                <MenuItem mnemonicParsing="false" onAction="#goToBus" text="Autocare" />
                <!--<MenuItem mnemonicParsing="false" onAction="#goToFeatures" text="Facilități" />-->
            </items>
        </Menu>
        <Menu mnemonicParsing="false"  text="Clienți">
            <items>
                <MenuItem mnemonicParsing="false" onAction="#goToReservationList" text="Listă rezervări" />
                <MenuItem mnemonicParsing="false" onAction="#goToClientList" text="Conturi clienți" />
            </items>
        </Menu>
        <Menu mnemonicParsing="false" text="Ajutor">
            <items>
                <MenuItem mnemonicParsing="false" onAction="#goToHelbAbout" text="Despre aplicație" />
            </items>
        </Menu>
    </menus>
</MenuBar>
